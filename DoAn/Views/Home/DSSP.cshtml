@model IEnumerable<DoAn.Models.SanPham>

@{
    ViewData["Title"] = "DSSP";
    Layout = "~/Views/Shared/_Layout_user.cshtml";
    var listsp = ViewBag.ListSP;
}


<div class="featured container no-gutter">


    <div class="m-xl-n5">
        @using (Html.BeginForm("DSSP", "Home"))
        {
            @Html.TextBox("onhap")
        }

    </div>
       
    <div class="row posts" style="margin-top: 70px">

        @foreach (SanPham item in listsp)
        {
            <div id=@item.Id class="item new col-md-4">

                <a asp-action="CTSP" asp-route-id="@item.Id">

                    @*<a href="single-product.html">*@
                    <div class="featured-item">
                        <img src="~/images/@item.HinhAnh" width="200" , height="300">
                        <h4>@item.TenSp</h4>
                        <h6>@item.Dongia</h6>
                    </div>
                    @*</a>*@
                </a>

            </div>
        }


    </div>

</div>

<div class="page-navigation">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <ul>
                    <li class="current-page"><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#"><i class="fa fa-angle-right"></i></a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="subscribe-form">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-heading">
                    <div class="line-dec"></div>
                    <h1>Subscribe on PIXIE now!</h1>
                </div>
            </div>
            <div class="col-md-8 offset-md-2">
                <div class="main-content">
                    <p>Godard four dollar toast prism, authentic heirloom raw denim messenger bag gochujang put a bird on it celiac readymade vice.</p>
                    <div class="container">
                        <form id="subscribe" action="" method="get">
                            <div class="row">
                                <div class="col-md-7">
                                    <fieldset>
                                        <input name="email" type="text" class="form-control" id="email"
                                               onfocus="if(this.value == 'Your Email...') { this.value = ''; }"
                                               onBlur="if(this.value == '') { this.value = 'Your Email...';}"
                                               value="Your Email..." required="">
                                    </fieldset>
                                </div>
                                <div class="col-md-5">
                                    <fieldset>
                                        <button type="submit" id="form-submit" class="button">Subscribe Now!</button>
                                    </fieldset>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
