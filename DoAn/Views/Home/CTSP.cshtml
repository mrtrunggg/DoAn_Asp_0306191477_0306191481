@model DoAn.Models.SanPham

@{
    ViewData["Title"] = "CTSP";
    Layout = "~/Views/Shared/_Layout_user.cshtml";
    var listsp = ViewBag.ListSP;
}


<!-- Page Content -->
<!-- Single Starts Here -->
<div class="single-product" style="padding-bottom:100px">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-heading">
                    <div class="line-dec"></div>
                    <h1>Single Product</h1>
                </div>
            </div>
            <div class="col-md-6">
                <div class="product-slider">
                    <div id="slider" class="flexslider">
                        <ul class="slides">
                            <li>
                                <img src="~/images/@Model.HinhAnh" width="400" , height="450>
                            </li>
                        </ul>
                    </div>
                    <div id="carousel" class="flexslider">
                        <ul class="slides">

                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="right-content">
                    <h4>@Model.TenSp</h4>
                    <h6>@Model.Dongia</h6>
                    <p>@Model.MoTa</p>
                    <span>@Model.SoLuong left on stock</span>
                    <form asp-action="themgiohang" asp-controller="Home">
                        <label for="quantity">Quantity:</label>
                        <input name="quantity" type="quantity" class="quantity-text" id="quantity"
                               onfocus="if(this.value == '1') { this.value = ''; }"
                               onBlur="if(this.value == '') { this.value = '1';}"
                               value="1">
                        <a asp-action="themgiohang" asp-route-id="@Model.Id" asp-controller="Home">
                            Thêm vào giỏ hàng
                        </a>
                        
                    </form>
                    <div class="down-content">
                        <div class="categories">
                            <h6>Category: <span><a href="#">Pants</a>,<a href="#">Women</a>,<a href="#">Lifestyle</a></span></h6>
                        </div>
                        <div class="share">
                            <h6>Share: <span><a href="#"><i class="fa fa-facebook"></i></a><a href="#"><i class="fa fa-linkedin"></i></a><a href="#"><i class="fa fa-twitter"></i></a></span></h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Single Page Ends Here -->
